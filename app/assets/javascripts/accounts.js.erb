var account;

var stripeReady = function() {
  // console.log( "ready!" );
  Stripe.setPublishableKey('<%= STRIPE_PUBLIC_KEY %>');
  return account.setupForm();
};

account = {
  setupForm: function() {
    return $('#new_account').submit(function() {
      $('input[type=submit]').attr('disabled', true);
      if ($('#card_number').length) {
        account.processCard();
        return false; // so that form is not submitted yet
      } else {
        return true;
      }
    });
  },
  processCard: function() {
    var card;
    card = {
      number: $('#card_number').val(),
      cvc: $('#card_code').val(),
      expMonth: $('#card_month').val(),
      expYear: $('#card_year').val()
    };
    return Stripe.createToken(card, account.handleStripeResponse);
  },
  handleStripeResponse: function(status, response) {
    if (status === 200) {
      $('#account_stripe_card_token').val(response.id);
      return $('#new_account')[0].submit();
    } else {
      $('#stripe_error').text(response.error.message);
      return $('input[type=submit]').attr('disabled', false);
    }
  }
};
$(document).on('page:update', stripeReady);