
<%= form_tag invoices_path, method: 'get', id: "invoices_search" do %>
  <div class="form-group invoice">
    <%= label_tag :from_date %>
    <%= text_field_tag :from_date, params[:from_date], class: "date_picker", placeholder: "yyyy-mm-dd" %>
  </div>
  <div class="form-group invoice">
    <%= label_tag :to_date %>
    <%= text_field_tag :to_date, params[:to_date], class: "date_picker", placeholder: "yyyy-mm-dd" %>
  </div>
  <div class="form-group" id="inv_customer_id">
    <%= collection_select(:invoice, :customer_id, current_account.customers.order(:name), :id, :name, prompt: :true) %>
  </div>
  <div class="form-group">
    <%= text_field_tag :search, params[:search], class: "search-query form-control", placeholder: ' by text within comment' %>
  </div>
  <div>
    <%= submit_tag "Filter", name: nil, class: "create-btn std-btn", data: {toggle: "tooltip"}, title: "Submits filter choices to refresh data" %>
    <a class="action-btn std-btn" data-toggle="modal" data-dismiss="modal">Cancel</a>
  </div>
<% end %><!-- end of form -->
