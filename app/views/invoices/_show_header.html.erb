<table class="invoice-show">
  <tr>
    <th class="th-invoice">Invoice Date:</th>
    <td class="td-invoice"><%= @invoice.date %></td>
  </tr>
  <tr>
    <th class="th-invoice">Customer:</th>
    <td class="td-invoice"><%= @invoice.customer_name %></td>
  </tr>
  <tr>
    <th class="th-invoice">Comment:</th>
    <td class="td-invoice"><%= simple_format(@invoice.comment) %></td>
  </tr>
</table>

  <%=  link_to 'Edit', edit_invoice_path(@invoice), class: 'create-btn std-btn' %>

  <%= link_to "Back", invoices_path, class: 'action-btn std-btn' %>
  
  <%= link_to "Print Preview", invoice_path(@invoice, format: "pdf"), class: 'create-btn std-btn', target: "_blank" %>  

  <%= render 'form' %>

  <% if current_account.vat_enabled? %>
  <p>VAT Summary</p>
    <table class="invoice-vat-summary">
      <% vat_rates(@bills).each do |rate| %>
        <tr>
          <td><%= rate.name if rate %></td>
          <td class="align-right"><%= number_to_currency(vat_by_rate(@invoice, rate)) if rate %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
