if($('#sign_in_modal').length > 0) {
 $("#sign_in_modal").modal();
}
else {
 $("body").prepend("<%= escape_javascript(render "remote_content/remote_sign_in", :formats => [:html]) %>");
 $("#sign_in_modal").modal();
}


$(document).ready(function() {
    $(".modal").on('shown.bs.modal', function() {
        $(this).find("[autofocus]:first").focus();
    });
});
