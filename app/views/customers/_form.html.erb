<%= form_for customer do |f| %>
  <%= f.hidden_field :account_id %>
  <div class="customer-form">
    <%= f.text_field :name, placeholder: 'Name', class: 'name', autofocus: 'autofocus' %>
    <%= errors_for f, :name %>
    <%= f.text_area :address, placeholder: 'Address', class: 'address' %>
    <%= errors_for f, :address %>
    <%= f.text_field :postcode, placeholder: 'Postcode', class: 'postcode' %>
    <%= f.label :is_default, 'set this as my default customer' %>
    <%= f.check_box :is_default %>
  </div>
  <div>
  <%= f.submit 'Save', :class => 'create-btn std-btn', 
    data: {toggle: "tooltip"}, title: "Save customers details"  %>
<% end %><!-- end of form -->
  <%= link_to "Cancel", customers_path, class: "action-btn std-btn",
    data: {toggle: "tooltip"}, title: "Cancel and return to list of customers"  %>
  <% if action_name != 'new' %>
    <%= button_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'warn-btn std-btn', title: "Delete customer"  %>
  <% end %>
  </div>
    <%#= render 'layouts/messages' %>
