<%= form_for @customer do |f| %>
  <p><%= f.hidden_field :account_id %></p>
  
  <p><%= f.text_field :name %></p>
  <p><%= errors_for f, :name %></p>
  <p><%= f.text_area :address %></p>
  <p><%= f.text_field :postcode %></p>
  
  <%= f.submit 'Save', :class => 'btn btn-primary' %>
<% end %>
<%= render 'layouts/messages' %>