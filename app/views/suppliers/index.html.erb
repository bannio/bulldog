<% content_for :title do %>Bulldog-Clip | Suppliers<% end %>
<% content_for :description do %>Bulldog-Clip Suppliers index<% end %>

<div class="container">
  <div class="col-md-4 col-md-offset-4 panel panel-default">
    <div class="panel-body">
      <h1>Suppliers</h1>

     <a href="#" id="pop" class="info-btn pop"
     data-title="Rename Suppliers"
     data-content="
     <ul class='info-ul'>
     <li>Use this feature to tidy up mis-spellings of Suppliers.</li>
     <li>Select the supplier you want to edit from the list.</li>
     <li>If the new supplier already exists then any bills already linked to the supplier will automatically be reassigned to that supplier. Use carefully!</li>
     </ul>">
     <img src="/assets/info_btn.png" alt="info button" class="info-img"/>
     </a>

      <table class="table table-hover table-condensed" id="Suppliers_table">
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @suppliers.each do |supplier| %>
            <tr title="click to edit", class="pointer rowlink",
                data-rowlink="<%= edit_supplier_path(supplier)%>">
              <td><%= supplier.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>