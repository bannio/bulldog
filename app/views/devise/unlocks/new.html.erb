<div class="container">
  <div class="panel panel-default col-md-4 col-md-offset-4">
    <div class="panel-body">
      <div class="authform">
      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <h1>Resend unlock instructions</h1>
        <%- if !resource.errors.empty? %>
          <%= content_tag(:p, "Sorry - #{resource.errors.full_messages.try(:first)}", class: 'help-block') %>
        <% end -%>
        <%#= devise_error_messages! %>
        <div class="form-group">
          <div class="form-inputs">
            <%#= f.label :email %>
            <%= f.email_field :email, required: true, autofocus: true, class: 'form-control',
            type: "email", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit "Resend unlock instructions", class: 'create-btn std-btn pull-right' %>
        </div>
      <% end %>

      </div>
    </div>
  </div>
</div>
