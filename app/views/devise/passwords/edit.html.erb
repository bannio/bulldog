<% content_for :title do %>Bulldog-Clip | Password Change<% end %>
<% content_for :description do %>Change Bulldog-Clip password<% end %>
<div class="authform">

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <h3>Change your password</h3>
    <%= devise_error_messages! %>

    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label "new password" %><br>
      <%= f.password_field :password, :required => true, :autofocus => true %>
      <%= f.label "Confirm your new password" %>
      <%= f.password_field :password_confirmation, :required => true %>
    </div>
    <%= f.submit 'Change Password', :class => 'button right' %>
  <% end %>
</div>

<%= render "devise/shared/links" %>
