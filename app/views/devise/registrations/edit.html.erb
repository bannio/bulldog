<% content_for :title do %>Bulldog-Clip | Change Password<% end %>
<% content_for :description do %>Reset Bulldog-Clip password<% end %>
<div class="container">
  <div class="col-md-4 col-md-offset-4 panel panel-default">
    <div class="panel-body">
      <div class="authform">
        <h1>Change Password</h1>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => 'form'}) do |f| %>
          
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="form-group">
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            </div>
            <% end %>
          <!-- <fieldset> -->
          <!-- <br> -->
            <%= form_group_for f, :password, label: false do %>
              <div class="form-group">
                <%= f.label :'New password' %>
                <%= f.password_field :password, autocomplete: 'off', autofocus: true, class: 'form-control', placeholder: 'Enter new password' %>
              </div>
            <% end %>
            <%= form_group_for f, :password_confirmation, label: false do %>
              <div class="form-group">
                <%= f.label :'Confirm new password' %>
                <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Re-enter new password' %>
              </div>
            <% end %>
          <!-- </fieldset> -->
          <!-- <fieldset> -->
          <br>
            <p>You must enter your current password to make changes.</p>
            <%= form_group_for f, :current_password, label: false do %>
              <div class="form-group">
                <%= f.label :'Current password*' %>
                <%= f.password_field :current_password, class: 'form-control', placeholder: 'Enter current password' %>
              </div>
            <% end %>
          <!-- </fieldset> -->
          <%= link_to 'Cancel', welcome_index_path, class: 'action-btn std-btn' %>
          <%= f.submit 'Update', :class => 'create-btn std-btn' %>
        <% end %>
      </div>
    </div>
  </div>
</div>