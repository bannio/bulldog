<% content_for :title do %>Bulldog-Clip | Sign Up<% end %>
<% content_for :description do %>Reset Bulldog-Clip password<% end %>
<div class="container">
  <div class="col-md-4 col-md-offset-4 panel panel-default">
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form'}) do |f| %>
        <h3>Sign up</h3>

        <%= form_group_for f, :email, label: false do %>
          <div>
            <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email' %>
          </div>
        <% end %>

         <%= f.submit 'Sign up', :class => 'create-btn std-btn' %>
         <%= flash_messages layout_flash: false %>
      <% end %>
    </div>
  </div>
</div>