<% content_for :title do %>Bulldog-Clip | Sign Up<% end %>
<% content_for :description do %>Reset Bulldog-Clip password<% end %>
<div class="container">
  <div class="col-md-4 col-md-offset-4 panel panel-default">
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form'}) do |f| %>
        <h1 class="modal-title">Sign up</h1>
        <hr>
        <%= form_group_for f, :email, label: false do %>
          <div>
            <%= f.label :email_address %>
            <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'enter your email address' %>
          </div>
        <% end %>
          <%= f.submit 'Sign up', :class => 'create-btn std-btn pull-right' %>
          <%= link_to 'Close', home_path, class: 'action-btn std-btn pull-right' %> 
          <%= flash_messages layout_flash: false %>
      <% end %>
    </div>
  </div>
</div>