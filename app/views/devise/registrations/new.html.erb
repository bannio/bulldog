<% content_for :title do %>Bulldog-Clip | Sign Up<% end %>
<% content_for :description do %>Reset Bulldog-Clip password<% end %>
<div class="authform">
<!-- <div class="col-md-6 col-md-offset-3 panel panel-default"> -->
  <!-- <div class="panel-body"> -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form'}) do |f| %>
      <h3>Sign up</h3>

      <%= form_group_for f, :email, label: false do %>
        <div>
          <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email' %>
        </div>
      <% end %>
      <%= form_group_for f, :password, label: false do %>
        <div>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
      <% end %>
      <%= form_group_for f, :password_confirmation, label: false do %>
        <div>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm password' %>
        </div>
      <% end %>

       <%= f.submit 'Sign up', :class => 'btn btn-primary btn-block' %>
       <%= flash_messages layout_flash: false %>
    <% end %>
  <!-- </div> -->
<!-- </div> -->
</div>
