<% content_for :title do %>Bulldog-Clip | Contact<% end %>
<% content_for :description do %>Contact Us<% end %>


<div class="container contact-page">
  <section class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
        <h1>Contact Us</h1>
      </div>
    </div><!--end row -->
  </section><!--end container-->
<hr>
  <section class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
        <p>
        If you can't find the answer to your question in our <a href="/faq" class="faq-link">FAQ section</a> you can send us a message here and we will try our best to answer it for you.
        </p>
        <p>
        If you just want to keep up to date with what we are up to, send us your details and we will add you to our mailing list.
        </p>
      </div>
    </div><!--end row-->
  </section><!--end container-->
  <section class="container">
    <div class="row">

      <div class="col-md-4 col-md-offset-4 panel panel-default contact-page">
        <div class="panel-body">
        <h2>Get in touch</h2>
          <div class="contact-form">
            <form role="form">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter your name">
                <p class="help-block hidden">Can't be blank</p>
              </div>
              <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" placeholder="Enter your email address">
                <p class="help-block hidden">Can't be blank</p>
              </div>
              <div class="form-group">
                <label for="subject">Subject</label>
                <textarea type="text" id="subject" class="form-control" rows="3" placeholder="Write your question here"></textarea>
                <p class="help-block hidden">Can't be blank</p>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox"> Please add me to the mailing list
                </label>
              </div>
              <a href="/home" class="create-btn std-btn">Send</a>
              <a href="/home" class="action-btn std-btn">Cancel</a>
            </form>
          </div><!--end form fields -->
        </div><!-- end panel body -->
      </div><!-- end panel -->
    </div><!--end row-->
  </section><!--end container-->
  <section class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
        <p>
        We look forward to hearing from you
        </p>
      </div>
    </div><!--end row-->
  </section><!--end container-->
</div><!--end container -->

