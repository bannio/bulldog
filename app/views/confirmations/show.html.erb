<% content_for :title do %>Bulldog-Clip | Account Activation<% end %>
<% content_for :description do %>Bulldog-Clip confirmation sign up<% end %>


<div class="container">
  <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2 panel panel-default">
    <div class="panel-body">
      <h1>Account Activation</h1>
        <div class="activate-form">
        <form role="form">
            <%= form_for resource, :as => resource_name, :url => update_user_confirmation_path, :html => {:method => 'patch'}, :id => 'activation-form' do |f| %>
              <%= devise_error_messages! %>
          <div class="form-group">
                <label class="form">Account activation<%# if resource.user_name %> for <%# resource.user_name %><%# end %></label>
                <%= f.text_field :account_name, class: 'form-control', autofocus: true, placeholder: 'Enter account name'  %>
          </div>
          <div class="form-group">
              <% if @requires_password %>
                  <%= f.label :password,'Choose a password' %> 
                  <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
          </div>
          <div class="form-group">
                  <%= f.label :password_confirmation,'Password confirmation' %> 
                  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Re-enter password' %>
          </div>
              <% end %>
              <%= hidden_field_tag :confirmation_token,@confirmation_token %>
              <%= f.submit "Activate", class: 'create-btn std-btn pull-right' %>
        <% end %>
        </form>
      </div>
    </div> 
  </div>
</div>
