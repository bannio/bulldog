<%= form_for @account do |f| %>

<h3>Edit Account</h3>

<%= form_group_for f, :name, label: false do %>
  <div class="input-group name">
    <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name' %>
  </div>
<% end %>

<%= form_group_for f, :address, label: false do %>
  <div class="input-group address">
    <%= f.text_area :address, autofocus: true, class: 'form-control address', placeholder: 'Address' %>
  </div>
<% end %>

<%= form_group_for f, :postcode, label: false do %>
  <div class="input-group postcode">
    <%= f.text_field :postcode, autofocus: true, class: 'form-control', placeholder: 'Postcode' %>
  </div>
<% end %>

<%= form_group_for f, :include_bank, label: false do %>
<div class="input-group">
  <%= f.label "include bank details on invoice?" %>
