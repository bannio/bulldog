<!-- FIXED TOP NAVBAR -->
<div class="row">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <!-- NAV TOGGLING -->
            <div class="navbar-header col-sm-9 col-xs-6">
                <button type="button" class="navbar-toggle pull-left" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>    
            </div><!--end navbar toggling-->    
           
            <!-- NAVBAR ITEMS -->
            <div class="navbar-items row">
              <div class="navbar-links navbar-collapse collapse col-sm-7 col-xs-6">
                  <ul class="nav navbar-nav">
                    <%= render 'layouts/navigation_links' %>
                  </ul>
              </div><!--end navbar-collapse-->

              <!-- NAVBAR LOGO -->
              <a class="navbar-logo nav navbar-nav navbar-brand navbar-right push-right col-sm-3 col-xs-6" href="#">
                  <img src="/assets/navbar_logo.png" class="navbar-img img-responsive" alt="navbar logo">
              </a><!--end navbar logo--> <!--NOTE columns don't add up to 12 to stop navitems pushing logo off navbar too early -->
            </div>
    </nav> <!--end navbar-->           
</div> <!--end header row-->
