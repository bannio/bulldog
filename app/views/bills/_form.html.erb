<%= form_for @bill do |f| %>
  <p><%= f.hidden_field :account_id %></p>
  <p><%= f.text_field :date, {class: 'date_picker'} %>
  </p>
  <%= form_group_for f, :customer_id, label: false do %>
    <p><%= f.collection_select :customer_id, current_account.customers, :id, :name, allow_blank: true, class: "form-control" %></p>
  <% end %>
  <%= form_group_for f, :supplier_id, label: false do %>
      <%= f.collection_select :supplier_id, current_account.suppliers, :id, :name, class: "form-control" %>
  <% end %>
  <%= form_group_for f, :category_id, label: false do %>
      <%= f.collection_select :category_id, current_account.categories, :id, :name, class: "form-control"  %>
  <% end %>
  <%= form_group_for f, :description_id, label: false do %>
      <%= f.text_field :description, placeholder: 'description', class: "form-control" %>
  <% end %>
  <%= form_group_for f, :amount, label: false do %>
      <%= f.text_field :amount, placeholder: 'amount', class: "form-control" %>
  <% end %>
  
  <%= f.submit 'Save', :class => 'btn btn-primary' %>
<% end %>
<%= render 'layouts/messages' %>