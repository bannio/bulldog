
<%= form_for @bill do |f| %>
  <%= f.hidden_field :account_id %>
  <div class="form-group">
    <%= f.text_field :date, class: "date_picker form-control" %>
  </div>
  <%= form_group_for f, :customer_id, label: false do %>
    <%= f.hidden_field :customer_id, data: {customers: get_customer_data} %>
  <% end %>
  <%= form_group_for f, :supplier_id, label: false do %>
    <%= f.hidden_field :supplier_id, data: {suppliers: get_supplier_data} %>
  <% end %>
  <%= form_group_for f, :category_id, label: false do %>
    <%= f.hidden_field :category_id, data: {categories: get_category_data} %>
  <% end %>
  <%= form_group_for f, :description, label: false do %>
    <%= f.text_field :description, placeholder: 'description', class: "form-control" %>
  <% end %>
  <%= form_group_for f, :amount, label: false do %>
    <%= f.text_field :amount, placeholder: 'amount', class: "form-control" %>
  <% end %> 
  <%= f.submit 'Save', :class => 'std-btn' %>
  <% if params[:action] == 'edit' %>
    <%= link_to 'Destroy', @bill, method: :delete, data: { confirm: 'Are you sure?' }, class: 'std-btn' %>
  <% end %>
  <%= link_to "Cancel", bills_path, class: "std-btn"  %>
<% end %> <!-- end of form_for -->

<%= render 'layouts/messages' %>