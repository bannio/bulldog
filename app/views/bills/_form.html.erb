
<%= form_for @bill, remote: true do |f| %>
  <%= f.hidden_field :account_id %>
  <%= form_group_for f, :date, label: false do %>
    <%= f.text_field :date, class: "date_picker form-control" %>
  <% end %>
  <%= form_group_for f, :customer_id, label: false do %>
    <%= f.hidden_field :customer_id, data: {customers: get_customer_data} %>
  <% end %>
  <%= form_group_for f, :supplier_id, label: false do %>
    <%= f.hidden_field :supplier_id, data: {suppliers: get_supplier_data} %>
  <% end %>
  <%= form_group_for f, :category_id, label: false do %>
    <%= f.hidden_field :category_id, data: {categories: get_category_data} %>
  <% end %>
  <%= form_group_for f, :description, label: false do %>
    <%= f.text_field :description, placeholder: 'Description', class: "form-control" %>
  <% end %>  
  <%= form_group_for f, :amount, label: false do %>
  <!-- <span class="currency-sign">£</span> -->
    <%= f.text_field :amount, placeholder: 'Amount', class: "form-control currency" %>
  <% end %>
  <% if current_account.vat_enabled? %>
    <%= form_group_for f, :vat_rate_id, label: false do %>
      <%= f.hidden_field :vat_rate_id, data: {vat_rates: get_vat_rate_data} %>
    <% end %>
    <%= form_group_for f, :vat, label: false do %>
    <!-- <span class="currency-sign">£</span> -->
      <%= f.text_field :vat, placeholder: 'VAT amount', class: "form-control currency" %>
    <% end %>
  <% end %> <!-- end of VAT fields -->
  <%= f.submit 'Save', :class => 'create-btn std-btn', data: {toggle: "tooltip"}, title: "Save changes" %>
  <% if params[:action] == 'edit' %>
    <%= link_to 'Delete', @bill, method: :delete, data: {confirm: 'Are you sure?'}, class: 'warn-btn std-btn', remote: true, title: "Delete bill" %>
  <% end %>
  <%= link_to "Cancel", bills_path, class: "action-btn std-btn", remote: true, data: {toggle: "tooltip"}, title: "Cancel and return to list of bills" %>
<% end %> <!-- end of form_for -->
