<% content_for :title do %>Bulldog-Clip | Bills<% end %>
<% content_for :description do %>Bulldog-Clip bills index<% end %>
<h1>Bills</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Date</th>
      <th>Customer</th>
      <th>Supplier</th>
      <th>Category</th>
      <th>Description</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @bills.each do |bill| %>
      <tr title="click to edit", class="pointer rowlink",
          data-rowlink="<%= edit_bill_path(bill)%>">
        <td><%= bill.date %></td>
        <td><%= bill.customer_name %></td>
        <td><%= bill.supplier_name %></td>
        <td><%= bill.category_name %></td>
        <td><%= bill.description %></td>
        <td><%= bill.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "New", new_bill_path, class: "btn btn-primary"  %></p>
