<%= form_for @setting, html: { multipart: true } do |f| %>

<h2 class="form-sub-head">Your Address Details</h2>

<%= form_group_for f, :name, label: false do %>
  <div class="input-group name">
    <%= f.label :name, "Name", class: "invoice-settings" %>
    <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name' %>
  </div>
<% end %>

<%= form_group_for f, :address, label: false do %>
  <div class="input-group address">
    <%= f.label :address, "Address", class: "invoice-settings" %>
    <%= f.text_area :address, autofocus: true, class: 'form-control', placeholder: 'Address' %>
  </div>
<% end %>


<%= form_group_for f, :postcode, label: false do %>
  <div class="input-group name">
    <%= f.label :postcode, "Postcode", class: "invoice-settings" %>
    <%= f.text_field :postcode, autofocus: true, class: 'form-control', placeholder: 'Postcode' %>
  </div>
<% end %>

<%= form_group_for f, :telephone, label: false do %>
  <div class="input-group name">
    <%= f.label :telephone, "Telephone", class: "invoice-settings" %>
    <%= f.text_field :telephone, autofocus: true, class: 'form-control', placeholder: 'Telephone No.', type: "tel" %>
  </div>
<% end %>

<%= form_group_for f, :email, label: false do %>
  <div class="input-group name">
    <%= f.label :email, "Email", class: "invoice-settings" %>
    <%= f.text_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address', type: "email" %>
  </div>
<% end %>

<h2 class="form-sub-head">Your Bank Details <small>(optional)</small></h2>

<%= form_group_for f, :bank_account_name, label: false do %>
  <div class="input-group name">
    <%= f.label :bank_account_name, "Bank account name", class: "invoice-settings" %>
    <%= f.text_field :bank_account_name, autofocus: true, class: 'form-control', placeholder: 'Bank account name' %>
  </div>
<% end %>

<%= form_group_for f, :bank_name, label: false do %>
  <div class="input-group name">
    <%= f.label :bank_name, "Bank name", class: "invoice-settings" %>
    <%= f.text_field :bank_name, autofocus: true, class: 'form-control', placeholder: 'Bank name' %>
  </div>
<% end %>

<%= form_group_for f, :bank_address, label: false do %>
  <div class="input-group name">
    <%= f.label :bank_address, "Bank branch", class: "invoice-settings" %>
    <%= f.text_field :bank_address, autofocus: true, class: 'form-control', placeholder: 'Bank branch' %>
  </div>
<% end %>

<%= form_group_for f, :bank_account_no, label: false do %>
  <div class="input-group bank">
    <%= f.label :bank_account_no, "Account number", class: "invoice-settings" %>
    <%= f.text_field :bank_account_no, autofocus: true, class: 'form-control', placeholder: 'Account number', type: "tel" %>
  </div>
<% end %>

<%= form_group_for f, :bank_sort, label: false do %>
  <div class="input-group bank">
    <%= f.label :bank_sort, "Sortcode", class: "invoice-settings" %>
    <%= f.text_field :bank_sort, autofocus: true, class: 'form-control', placeholder: 'Sortcode', type: "tel" %>
  </div>
<% end %>

<%= form_group_for f, :bank_bic, label: false do %>
  <div class="input-group bank">
    <%= f.label :bank_bic, "BIC code", class: "invoice-settings" %>
    <%= f.text_field :bank_bic, autofocus: true, class: 'form-control', placeholder: 'BIC code' %>
  </div>
<% end %>

<%= form_group_for f, :bank_iban, label: false do %>
  <div class="input-group bank">
    <%= f.label :bank_iban, "IBAN code", class: "invoice-settings" %>
    <%= f.text_field :bank_iban, autofocus: true, class: 'form-control', placeholder: 'IBAN code' %>
  </div>
<% end %>

<% if current_account.vat_enabled? %>
  <h2 class="form-sub-head">Your VAT Details</h2>

  <%= form_group_for f, :vat_reg_no, label: false do %>
    <div class="input-group vat-reg">
      <%= f.label :vat_reg_no, "VAT Registration Number", class: "invoice-settings" %>
      <%= f.text_field :vat_reg_no, autofocus: true, class: 'form-control', placeholder: 'VAT Registration Number', type: "tel" %>
    </div>
  <% end %>
<% end %>


<h2 class="form-sub-head">Printing Preferences <small>(set defaults)</small></h2>

<% if current_account.vat_enabled? %>
  <%= form_group_for f, :include_vat, label: false do %>
    <div class="input-group name">
      <%= f.label :include_vat, class: "invoice-settings" %>
      <%= f.check_box :include_vat %>
    </div>
  <% end %>
<% end %>

  <%= form_group_for f, :include_bank, label: false do %>
  <div class="input-group name">
    <%= f.label :include_bank, class: "invoice-settings" %>
    <%= f.check_box :include_bank %>
  </div>
<% end %>
<% if current_account.business? %>
  <%= form_group_for f, :logo do %>
    <div class="input-group logo-upload">
    <%#= f.label :logo %>
    <%= f.file_field :logo %>
    </div>
  <% end %>
  <div class="current-logo-upload">
    <label class="invoice-settings">Current logo image: </label><%= image_tag @setting.logo.url(:thumb), alt: "No logo uploaded" %>
  </div>
<% end %>

<%= f.submit 'Save', :class => 'create-btn std-btn', data: {toggle: "tooltip"}, title: "Save new invoice print settings"  %>
<%= link_to 'Cancel', setting_path(@setting), class: 'action-btn std-btn', data: {toggle: "tooltip"}, title: "Cancel and return to view current invoice print settings"  %>

<%#= flash_messages layout_flash: false %>
<% end %>
