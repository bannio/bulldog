<% content_for :title do %>BulldogClip | Welcome<% end %>
<% content_for :description do %>A place to keep receipts<% end %>

<%= render 'first_sign_in' if first_sign_in? %>

<div class= "container ">
  <div class="row welcome">
    <div class="col-xs-10 col-xs-offset-1">
    <div class="panel panel-default welcome">
      <div class="panel-body">
      <a href="/bills" class="clickable-block">
      <img src=<%= asset_path('bills_icon.png') %> alt="bills icon image" class="image-responsive welcome">
        <p>Bills</p>
      </a>
     </div>
    </div>
    <div class="panel panel-default welcome">
      <div class="panel-body">
      <a href="/invoices" class="clickable-block">
          <img src=<%= asset_path('invoices_icon.png') %> alt="documents icon image" class="image-responsive welcome">
          <p>Documents</p>
      </a>
      </div>
    </div>
    <div class="panel panel-default welcome">
      <div class="panel-body">
      <a href="/reports" class="clickable-block">
        <img src=<%= asset_path('analysis_icon.png') %> alt="analysis icon image" class="image-responsive welcome">
        <p>Analysis</p>
      </a>
      </div>
    </div>
    <div class="panel panel-default welcome flipable">
      <div class="panel-body front card">
      <img src=<%= asset_path('tools_icon.png') %> alt="tools icon image" class="image-responsive welcome">
      <a href="#" class="subnav-btn">Tools</a>
      </div>
      <div class="panel-body back card">
        <ul class="tools-flip-menu">
          <li><%= link_to 'Customers', customers_path, class: 'menu-item' %></li>
          <hr>
          <li><%= link_to 'Categories', categories_path, class: 'menu-item' %></li>
          <hr>
          <li><%= link_to 'Suppliers', suppliers_path, class: 'menu-item' %></li>
          <hr>
          <% if current_account.vat_allowed? %>
            <li><%= link_to 'VAT Rates', vat_rates_path, class: 'menu-item' %></li>
            <hr>
          <% end %>
          <li><%= link_to 'Document Setup', settings_path, class: 'menu-item' %></li>
          <hr>
        </ul>
      </div>
    </div>

    <div class="panel panel-default welcome flipable">
      <div class="panel-body front card">
          <img src=<%= asset_path('account_icon.png') %> alt="account icon image" class="image-responsive welcome">
      <a href="#" class="subnav-btn">Account</a>
      </div>
      <div class="panel-body back card">
        <ul class="tools-flip-menu">
          <li><%= link_to 'Change Password', edit_user_registration_path, class: "menu-item" %></li>
          <hr>
          <li><%= link_to 'Change Email Address', edit_email_user_registration_path, class: "menu-item" %></li>
          <hr>
          <li><%= link_to 'Manage Subscription', account_path(current_account), class: "menu-item" %></li>
          <hr>
        </ul>
      </div>
    </div>
    <div class="panel panel-default welcome">
      <div class="panel-body">
        <a href="/news" class="clickable-block">
          <img src=<%= asset_path('news_icon.png') %> alt="news icon image" class="image-responsive welcome">
          <p>News</p>
        </a>
      </div>
    </div>
  </div>
  </div>
</div> <!-- end container -->




