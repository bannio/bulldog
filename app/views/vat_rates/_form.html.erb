<%= form_for @vat_rate, remote: true do |f| %>
  <%= f.hidden_field :account_id %>
  <%= form_group_for f, :name, label: false do %>
    <%= f.text_field :name, placeholder: 'VAT rate name', class: "form-control" %>
  <% end %>
  <%= form_group_for f, :rate, label: false do %>
    <%= f.text_field :rate, placeholder: 'VAT rate %', class: "form-control" %>
  <% end %>

  <%= form_group_for f, :active, label: true do %>
    <%= f.check_box :active, class: "form-control" %>
  <% end %>
   
  <%= f.submit 'Save', :class => 'create-btn std-btn' %>
  <% if params[:action] == 'edit' %>
    <%= link_to 'Delete', @vat_rate, method: :delete, data: { confirm: 'Are you sure?' }, class: 'warn-btn std-btn' %>
  <% end %>
  <%= link_to "Cancel", vat_rates_path, class: "action-btn std-btn", remote: true  %>
<% end %> <!-- end of form_for -->