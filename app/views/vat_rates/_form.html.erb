<%= form_for @vat_rate, remote: true do |f| %>
  <%= f.hidden_field :account_id %>
  <%= form_group_for f, :name, label: false do %>
    <%= f.label :VAT_rate_name %>
    <%= f.text_field :name, placeholder: 'e.g. Standard', class: "form-control" %>
  <% end %>
  <%= form_group_for f, :rate, label: false do %>
    <%= f.label :VAT_rate %>
    <%= f.text_field :rate, placeholder: 'enter VAT rate %', class: "form-control percentage", type: "number" %>
  <% end %>

  <%= form_group_for f, :active, label: true do %>
    <%= f.check_box :active %>
  <% end %>
   
  <%= f.submit 'Save', :class => 'create-btn std-btn', data: {toggle: "tooltip"}, title: "Save changes to VAT rate"  %>
  <% if params[:action] == 'edit' %>
    <%= link_to 'Delete', @vat_rate, method: :delete, data: { confirm: 'Are you sure?', toggle: "tooltip" }, class: 'warn-btn std-btn', title: "Delete VAT rate"  %>
  <% end %>
  <%= link_to "Cancel", vat_rates_path, class: "action-btn std-btn", remote: true, data: {toggle: "tooltip"}, title: "Cancel and return to list of VAT rates"  %>
<% end %> <!-- end of form_for -->